# API Keys
PERPLEXITY_API_KEY=your_perplexity_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Cloud Settings (for Vertex AI and TTS)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json
GCP_LOCATION=us-central1

# Database
DATABASE_URL=sqlite:///./yt_deepresearch.db

# Output Configuration
OUTPUT_DIR=./output
LOGS_DIR=./logs
ASSETS_DIR=./output/assets

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/yt-deepresearch.log

# Research Settings
MAX_SEARCH_RESULTS=10
RESEARCH_DEPTH=deep  # Options: quick, medium, deep
QUESTIONS_PER_TOPIC=5
SUB_QUESTIONS_PER_QUESTION=2

# Script Generation Settings
SCRIPT_LANGUAGE=en  # Language code: en, hi, ta, te, kn, ml
SCRIPT_LENGTH=medium  # Options: short, medium, long
CONTENT_STYLE=educational  # Options: educational, entertaining, documentary

# Asset Generation - Images
IMAGE_MODEL=imagegeneration@006
IMAGE_RESOLUTION=1920x1080
IMAGE_ASPECT_RATIO=16:9
IMAGES_PER_SUBSEGMENT=1
IMAGE_RETRY_COUNT=3
IMAGE_RETRY_DELAY=5

# Asset Generation - Audio/TTS
TTS_LANGUAGE_CODE=en-US
TTS_VOICE_NAME=en-US-Neural2-J
TTS_SPEAKING_RATE=1.0
TTS_PITCH=0.0
TTS_DELAY_BETWEEN_CALLS=2

# Video Assembly
VIDEO_RESOLUTION=1920x1080
VIDEO_FPS=30
VIDEO_CODEC=libx264  # Options: libx264, h264_nvenc
VIDEO_BITRATE=5000k

# YouTube Publishing
YOUTUBE_CLIENT_SECRET_PATH=./client_secret.json
YOUTUBE_TOKEN_PATH=./token.json
YOUTUBE_CATEGORY_ID=27  # 27 = Education
YOUTUBE_PRIVACY_STATUS=unlisted  # Options: public, unlisted, private
YOUTUBE_PLAYLIST_ID=  # Optional playlist ID

# Cleanup Settings
CLEANUP_ON_SUCCESS=false
ARCHIVE_ARTIFACTS=true

# Pipeline Control
RUN_PHASES=all  # Options: all, script_only, assets_only, video_only
SKIP_EXISTING_ASSETS=true
