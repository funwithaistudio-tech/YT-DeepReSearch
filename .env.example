# API Keys (Required)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Settings (Required for Vertex AI)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json

# Output Configuration
OUTPUT_DIR=./output

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/yt-deepresearch.log

# Research Settings
MAX_SEARCH_RESULTS=10
RESEARCH_DEPTH=deep  # Options: quick, medium, deep

# Script Generation Settings
SCRIPT_LANGUAGE=en  # Language code: en, hi, ta, te, kn, ml
SCRIPT_LENGTH=medium  # Options: short, medium, long
CONTENT_STYLE=educational  # Options: educational, entertaining, documentary

# Excel Queue Settings
EXCEL_INPUT_PATH=./input/topics.xlsx
EXCEL_SHEET_NAME=Topics

# Advanced Settings
MAX_RETRIES=3
RETRY_DELAY=5
TIMEOUT=300
MAX_TOKENS_PER_REQUEST=4000
TOKEN_BUFFER=500
